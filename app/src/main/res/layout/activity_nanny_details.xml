<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:background="@drawable/gradient"
    tools:context=".NannyDetails"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:text="Hi, I'm"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="italic"/>

    <androidx.cardview.widget.CardView
        android:layout_width="275dp"
        android:layout_height="166dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="160dp">

        <ImageView
            android:id="@+id/nannyImage"
            android:layout_width="275dp"
            android:layout_height="166dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/price_and_Rating"
        android:layout_width="274dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:background="@drawable/back"
        android:paddingTop="5dp"
        android:text="$11 per hr | ⭐5.0 stars"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/exp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"
        android:text="I have 2 years of experience"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        style="@style/textStyleBody"/>

    <TextView
        android:id="@+id/qualities"
        style="@style/textStyleBody"
        android:layout_width="340dp"
        android:layout_height="118dp"
        android:layout_below="@id/exp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="I am:"
        android:textColor="@color/black" />



    <Button
        android:background="@drawable/btn_background"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnBooking"
        android:layout_marginTop="600dp"
        android:text="Book"
        android:textColor="@color/white"
        android:layout_marginEnd="139dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

</RelativeLayout>