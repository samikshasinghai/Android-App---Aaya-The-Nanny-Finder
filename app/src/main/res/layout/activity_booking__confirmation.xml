<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".BookingConfirmation"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar"/>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="165dp"
        android:src="@drawable/ic_baseline_check_circle_24" />

    <TextView
        android:id="@+id/confirmedTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Booking Confirmed"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>


<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="Booking Summary"
        android:textSize="20sp"
        android:textAlignment="center"/>

</LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <ImageView
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:id="@+id/nannyImage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/nannyName"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:text="Juli Stephen"
        android:textSize="16sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/nannyPhone"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:text="+(248)-222-2222"
        android:textSize="16sp"/>

</LinearLayout>

</LinearLayout>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/bookingDetails"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="30dp"
    android:text="123 Auburn road, Rochester Hills, MI, 48307, at 9 AM, Saturday on Nov 2nd 2021"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_marginRight="20dp"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginTop="55dp"
    android:layout_marginLeft="30dp"
    android:text="Email has been sent to the given email address. Thanks for your patience."
    android:layout_marginRight="30dp"
    android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/btnManageBooking"
            style="@style/btnTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PreferredQualitiesTbl"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            android:text="Manange Booking"
            android:layout_gravity="center_horizontal"

            />

        <!--<Button
            android:background="@drawable/btn_background"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/btnCancelBooking"
            style="@style/btnTextStyle"
            android:layout_marginTop="10dp"
            android:text="Cancel Booking"
            android:layout_below="@id/PreferredQualitiesTbl"
            android:layout_gravity="center_horizontal"/>
-->

    </LinearLayout>


</LinearLayout>